<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <FrameLayout
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#77000000"
            android:orientation="vertical"
            android:paddingLeft="28dp"
            android:paddingRight="56dp"
            android:paddingBottom="28dp"
            android:paddingTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/vehicle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SL478"
                android:textSize="72dp"
                android:textColor="#FFFFFF"
                fontPath="fonts/Lora-Regular.ttf"
                />


            <TextView
                android:id="@+id/vehicle_introShort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Premium Cabriolet"
                android:textSize="24dp"
                android:includeFontPadding="false"
                android:textColor="#FFFFFF"
                fontPath="fonts/OpenSans-Light.ttf"
                />
        </LinearLayout>


        <FrameLayout
            android:id="@+id/button_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="145dp"
            app:layout_constraintLeft_toLeftOf="@+id/background"
            app:layout_constraintTop_toTopOf="@+id/background">

            <ImageButton
                android:id="@+id/button_more"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:onClick="goToTeaserFull"
                android:scaleType="fitXY"
                android:src="@drawable/button_anim" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="#00FFAADD"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/micro" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="16dp"
                    android:text="More"
                    android:textSize="22dp"
                    fontPath="fonts/OpenSans-Light.ttf"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>


        </FrameLayout>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>